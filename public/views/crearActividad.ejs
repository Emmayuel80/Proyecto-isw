                <ul class="nav navbar-nav">
                    <li><a href="/profile/verAsuntos">Asuntos</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/profile"><span class="glyphicon glyphicon-user"></span> Perfil</a></li>
                    <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Log out</a></li>
                </ul>
            </div>
        </nav>
    </div>
    <% } %>
    <% if(!user.RFCE) { %>
    <div id="barraNavegacion">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/profile">Inicio</a>
                </div>
                <ul class="nav navbar-nav">
                    <li><a href="/profile/verAsuntosEncargado">Asuntos</a></li>
                    <li><a href="/profile/crearAsunto">Crear asunto</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/profile"><span class="glyphicon glyphicon-user"></span> Perfil</a></li>
                    <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Log out</a></li>
                </ul>
            </div>
        </nav>
    </div>
    <% } %>
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">
            <h1><%=user.Nombre%></h1>

            <h1>Agregar Actividad:</h1>
            <form action="" method="post">
                <div class="form-group">
                    <label for="Nombre">Nombre de la Actividad:</label>
                    <input class="form-control" type="text" name="Nombre" id="Nombre" maxlength="50" required
                        title="Maximo 50 caracteres">
                </div>
        <div class="form-group">
        <label for="Descripcion">Descripción:</label>
        <textarea class="form-control" name="DescripcionActividad" id="DescripcionActividad" maxlength="200" required title="Maximo 200 caracteres"></textarea>
        </div>
        <div class="form-group">
            <label for="asignar">Colaboración entre areas</label>
            <input class="form-control" type="checkbox" name="asignar">
        </div>
        <div class="form-group" id="asignacion" style="display: none;">
            <label for="area">Area con la que se colaboró: </label>
            <select name="area" id="area" >
                <%for (let i = 0; i < area.length; i++) {%>
                    <option value="<%=area[i].IdArea%>"><%=`${area[i].Nombre}`%></option>
                <%}%>
            </select>
        </div>
        <a href="/profile/verAsuntos" class="btn btn-danger btn-lg">Cancelar</a> <button class="btn btn-warning btn-lg" type="submit">Crear</button>
    </form>
</div>
</div>

<script>
    var checkbox = document.querySelector("input[name=asignar]");
    
    checkbox.addEventListener( 'change', function() {
        if(this.checked) {
            document.getElementById('asignacion').style.display = "block";
            // Checkbox is checked..
        } else {
            document.getElementById('asignacion').style.display = "none";
            // Checkbox is not checked..
        }
    });
    </script>
</body>

</html>