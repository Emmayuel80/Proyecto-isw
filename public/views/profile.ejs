<!doctype html>
<html>
<head>
    <title>GUM</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span><%=`Bienvenido ${user.Nombre}`%></h1>
        <!-- Funcionalidad del Subordinado -->
        <% if(user.RFCE) { %>
        <a href="/profile/verAsuntos" class="btn btn-info btn-sm">Ver asuntos</a>
        <% } %>
        <!-- Funcionalidad del encargado -->
        <% if(!user.RFCE){%>
        <a href="/profile/crearAsunto" class="btn btn-info btn-sm">Crear asunto</a>
        <!-- Btn cerrar sesión-->
        <a href="/logout" class="btn btn-danger btn-sm">Cerrar Sesión</a>
        <a href="/profile/verAsuntosEncargado" class="btn btn-default btn-sm">Ver asuntos de subordinados</a>
        <a href="/profile/verAsuntosPersonales" class="btn btn-default btn-sm">Ver asuntos personales</a>
        <a href="/profile/signup/<%=user.RFC%>" class="btn btn-default btn-sm">Registrar subordinado</a>
        <%}%>
    </div>


</div>
</body>
</html>